{
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[toml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "black-formatter.args": [
        "--line-length",
        "120"
    ],
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E203,W503"
    ],
    "flake8.severity": {
        "E": "Warning",
        "F": "Error",
        "I": "Information",
        "W": "Warning"
    }
}